<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000000"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="743dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="10dp"
                android:gravity="center|fill_horizontal|center"
                android:text="BIENVENIDOS A FARMACIA SINAI"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textColorHighlight="#1900FF"
                android:textColorHint="#0800FF"
                android:textSize="25sp"
                android:textStyle="normal|bold" />

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="433dp"
                android:layout_height="202dp"
                android:scaleType="centerCrop"
                android:src="@drawable/promo"/>

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="426dp"
                android:layout_height="214dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fffffffff" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="222dp"
                android:scaleType="centerCrop"
                android:src="@drawable/suerox" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>